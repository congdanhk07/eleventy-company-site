<ul class="blog-list">
    {% for post in collections.post %}
        <li class="blog-list-item">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
            <small>{{ post.date | postDate }}</small>
        </li>
    {% endfor %}
</ul>